@model WebsiteBanHang.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Xóa sản phẩm</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Bạn có chắc chắn muốn xóa sản phẩm này?</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Tên sản phẩm</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                <dt class="col-sm-2">Giá</dt>
                <dd class="col-sm-10">@Model.Price.ToString("N0") VNĐ</dd>

                <dt class="col-sm-2">Mô tả</dt>
                <dd class="col-sm-10">@Model.Description</dd>

                <dt class="col-sm-2">Danh mục</dt>
                <dd class="col-sm-10">@Model.Category?.Name</dd>

                <dt class="col-sm-2">Hình ảnh</dt>
                <dd class="col-sm-10">
                    <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 200px; height: auto;" />
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div> 
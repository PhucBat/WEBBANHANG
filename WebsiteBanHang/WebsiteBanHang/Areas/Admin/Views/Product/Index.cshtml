@model IEnumerable<WebsiteBanHang.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Quản lý sản phẩm</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-action="Add" class="btn btn-primary">Thêm sản phẩm mới</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Danh mục</th>
                            <th>Hình ảnh</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Price.ToString("N0") VNĐ</td>
                                <td>@product.Category?.Name</td>
                                <td>
                                    <img src="@product.ImageUrl" alt="@product.Name" style="width: 100px; height: auto;" />
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 
@model WebsiteBanHang.Models.Product

@{
	ViewData["Title"] = "Chi tiết sản phẩm";
}

<h1>Chi tiết sản phẩm</h1>

<div class="row">
	<div class="col-md-6">
		<dl class="row">
			<dt class="col-sm-4">Tên sản phẩm:</dt>
			<dd class="col-sm-8">@Model.Name</dd>

			<dt class="col-sm-4">Giá:</dt>
			<dd class="col-sm-8">@Model.Price.ToString("N0") VNĐ</dd>

			<dt class="col-sm-4">Mô tả:</dt>
			<dd class="col-sm-8">@Model.Description</dd>

			<dt class="col-sm-4">Danh mục:</dt>
			<dd class="col-sm-8">@Model.Category?.Name</dd>
		</dl>

		<div class="mt-3">
			<a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
			<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
			<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
		</div>
	</div>

	<div class="col-md-6">
		@if (!string.IsNullOrEmpty(Model.ImageUrl))
		{
			<img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid mb-3" />
		}

		@if (Model.Images != null && Model.Images.Any())
		{
			<div class="row">
				@foreach (var image in Model.Images)
				{
					<div class="col-md-4 mb-3">
						<img src="@image.Url" alt="@Model.Name" class="img-fluid" />
					</div>
				}
			</div>
		}
	</div>
</div>
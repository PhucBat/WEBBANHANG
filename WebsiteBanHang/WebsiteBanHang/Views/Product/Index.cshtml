@model IEnumerable<WebsiteBanHang.Models.Product>

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100px;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                    @if (product.ImageUrls != null && product.ImageUrls.Any())
                    {
                        <div>
                            @foreach (var extraImage in product.ImageUrls)
                            {
                                <img src="@extraImage" alt="@product.Name" style="max-width: 100px;" />
                            }
                        </div>
                    }
                </td>
                <td>
                    <a asp-action="Display" asp-route-id="@product.Id">View</a> |
                    <a asp-action="Update" asp-route-id="@product.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
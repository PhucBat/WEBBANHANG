@model IEnumerable<WebsiteBanHang.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<h1>Danh sách danh mục</h1>

<p>
    <a asp-action="Add" class="btn btn-primary">Thêm danh mục mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>